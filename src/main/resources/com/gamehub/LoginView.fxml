<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="550" prefWidth="450" style="-fx-background-color: linear-gradient(to bottom, #222831, #393e46);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.gamehub.LoginController">
    
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="40" left="50" right="50" top="40" />
            </padding>
            
            <!-- Title -->
            <Label style="-fx-font-size: 36px; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸŽ® GameHub" />
            
            <Label style="-fx-font-size: 18px; -fx-text-fill: #e0e0e0;" text="Login to Your Account" />
            
            <!-- Spacer -->
            <Region prefHeight="20" />
            
            <!-- Username Field -->
            <VBox spacing="8">
                <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="Username" />
                <TextField fx:id="usernameField" prefWidth="320" promptText="Enter your username" style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 5px;" />
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="8">
                <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="Password" />
                <PasswordField fx:id="passwordField" prefWidth="320" promptText="Enter your password" style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 5px;" />
            </VBox>
            
            <!-- Error Label -->
            <Label fx:id="errorLabel" maxWidth="320" style="-fx-text-fill: #ff6b6b; -fx-font-size: 13px; -fx-font-weight: bold;" wrapText="true" />
            
            <!-- Login Button -->
            <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="36.0" prefWidth="79.0" style="-fx-background-color: #4CAF50;                             -fx-text-fill: white;                             -fx-font-size: 16px;                             -fx-font-weight: bold;                            -fx-pref-height: 45px;                            -fx-background-radius: 5px;                            -fx-cursor: hand;" text="Login" />
            
            <!-- Signup Link -->
            <HBox alignment="CENTER" spacing="8">
                <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 13px;" text="Don't have an account?" />
                <Hyperlink fx:id="signupLink" onAction="#handleSignupNavigation" style="-fx-text-fill: #64B5F6; -fx-font-size: 13px; -fx-font-weight: bold;" text="Sign Up Here" />
            </HBox>
        </VBox>
    </center>
    
    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Label style="-fx-text-fill: rgba(255,255,255,0.6); -fx-font-size: 11px;" text="Â© 2025 GameHub - Secure Gaming Platform" />
        </HBox>
    </bottom>
</BorderPane>
