<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.gamehub.LoginController"
            prefWidth="450" prefHeight="550"
            style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #2a5298);">
    
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="40" right="50" bottom="40" left="50"/>
            </padding>
            
            <!-- Title -->
            <Label text="ðŸŽ® GameHub" 
                   style="-fx-font-size: 36px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            
            <Label text="Login to Your Account" 
                   style="-fx-font-size: 18px; -fx-text-fill: #e0e0e0;"/>
            
            <!-- Spacer -->
            <Region prefHeight="20"/>
            
            <!-- Username Field -->
            <VBox spacing="8">
                <Label text="Username" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                <TextField fx:id="usernameField" 
                          promptText="Enter your username" 
                          prefWidth="320"
                          style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 5px;"/>
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="8">
                <Label text="Password" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                <PasswordField fx:id="passwordField" 
                              promptText="Enter your password"
                              prefWidth="320"
                              style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 5px;"/>
            </VBox>
            
            <!-- Error Label -->
            <Label fx:id="errorLabel" 
                   style="-fx-text-fill: #ff6b6b; -fx-font-size: 13px; -fx-font-weight: bold;"
                   wrapText="true"
                   maxWidth="320"/>
            
            <!-- Login Button -->
            <Button fx:id="loginButton" 
                    text="Login" 
                    onAction="#handleLogin"
                    prefWidth="320"
                    style="-fx-background-color: #4CAF50; 
                           -fx-text-fill: white; 
                           -fx-font-size: 16px; 
                           -fx-font-weight: bold;
                           -fx-pref-height: 45px;
                           -fx-background-radius: 5px;
                           -fx-cursor: hand;"/>
            
            <!-- Signup Link -->
            <HBox alignment="CENTER" spacing="8">
                <Label text="Don't have an account?" 
                       style="-fx-text-fill: #e0e0e0; -fx-font-size: 13px;"/>
                <Hyperlink fx:id="signupLink" 
                          text="Sign Up Here" 
                          onAction="#handleSignupNavigation"
                          style="-fx-text-fill: #64B5F6; -fx-font-size: 13px; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </center>
    
    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Label text="Â© 2025 GameHub - Secure Gaming Platform" 
                   style="-fx-text-fill: rgba(255,255,255,0.6); -fx-font-size: 11px;"/>
        </HBox>
    </bottom>
</BorderPane>
