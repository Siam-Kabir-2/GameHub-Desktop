<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #1E1E2C;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gamehub.controller.LeaderboardController">
    <top>
        <fx:include source="./Navbar.fxml"/>
    </top>

    <center>

        <ScrollPane fitToWidth="true" style="-fx-background: #1E1E2C; -fx-background-color: #1E1E2C;">
            <VBox fx:id="leaderboardContainer" alignment="TOP_CENTER" spacing="5" style="-fx-padding: 20;">
                <VBox style="-fx-background-color: #2D2D2D;">
                    <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
                        <Label text="Select Game:" textFill="white">
                            <font>
                                <Font name="Verdana" size="16.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="gameSelector" onAction="#onGameSelected" prefWidth="200" style="-fx-font-size: 14px;" />
                    </HBox>
                </VBox>
                <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #3A3A4A; -fx-padding: 15; -fx-background-radius: 5;">
                    <Label text="RANK" prefWidth="80" textFill="#FFD700" alignment="CENTER">
                        <font><Font name="Verdana Bold" size="16.0" /></font>
                    </Label>
                    <Label text="PLAYER" prefWidth="200" textFill="#FFD700" alignment="CENTER">
                        <font><Font name="Verdana Bold" size="16.0" /></font>
                    </Label>
                    <Label text="SCORE" prefWidth="120" textFill="#FFD700" alignment="CENTER">
                        <font><Font name="Verdana Bold" size="16.0" /></font>
                    </Label>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
