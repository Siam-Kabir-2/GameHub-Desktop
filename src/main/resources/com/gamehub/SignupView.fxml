<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="450" style="-fx-background-color: linear-gradient(to bottom, #dfd0cc, #393e46);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gamehub.controller.SignupController">
    
    <center>
        <VBox alignment="CENTER" spacing="14.0">
            <padding>
                <Insets bottom="15.0" left="50.0" right="50.0" top="30.0" />
            </padding>

            <Label style="-fx-font-size: 36px; -fx-text-fill: black; -fx-font-weight: bold;" text="ðŸŽ® GameHub" />
            
            <Label style="-fx-font-size: 18px; -fx-text-fill: #393e46;" text="Create New Account">
            <font>
               <Font size="9.0" />
            </font></Label>

            <Region prefHeight="15" />

            <VBox spacing="8">
                <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="Username" />
                <TextField fx:id="usernameField" prefWidth="320" promptText="Choose a username (min. 3 characters)" style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 5px;" />
            </VBox>

            <VBox spacing="8">
                <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="Password" />
                <PasswordField fx:id="passwordField" prefWidth="320" promptText="Create a password (min. 6 characters)" style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 5px;" />
            </VBox>

            <VBox spacing="8">
                <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="Confirm Password" />
                <PasswordField fx:id="confirmPasswordField" prefWidth="320" promptText="Re-enter your password" style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-background-radius: 5px;" />
            </VBox>

            <Label fx:id="errorLabel" maxWidth="320" style="-fx-text-fill: #ff6b6b; -fx-font-size: 13px; -fx-font-weight: bold;" wrapText="true" />

            <Button fx:id="signupButton" onAction="#handleSignup" prefHeight="36.0" prefWidth="161.0" style="-fx-background-color: #FF6B6B;                             -fx-text-fill: white;                             -fx-font-size: 16px;                             -fx-font-weight: bold;                            -fx-pref-height: 45px;                            -fx-background-radius: 5px;                            -fx-cursor: hand;" text="Create Account" />

            <HBox alignment="CENTER" spacing="8">
                <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 13px;" text="Already have an account?" />
                <Hyperlink fx:id="loginLink" onAction="#handleLoginNavigation" style="-fx-text-fill: #FFD93D; -fx-font-size: 13px; -fx-font-weight: bold;" text="Login Here" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
